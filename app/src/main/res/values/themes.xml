<resources>
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_color</item>
        <item name="colorPrimaryVariant">@color/main_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->

        <item name="colorSecondary">@color/main_color</item>
        <item name="colorSecondaryVariant">@color/main_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <!-- Customize your theme here. -->

    </style>
    <!-- For Splash Screem -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar"></style>

    <style name="BtnMainSemi" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_main_semi_round</item>
        <item name="android:textColor">@color/white</item>
        <!-- 누루면 회색 그림자 효과를 냄 -->
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="BtnMainSquare" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_main_square</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="BtnMainRound" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_main_round</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="BtnLightSemi" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_light_semi_round</item>
        <item name="android:textColor">@color/main_color</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="BtnLightSquare" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_light_square</item>
        <item name="android:textColor">@color/main_color</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="BtnLightRound" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_light_round</item>
        <item name="android:textColor">@color/main_color</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>


</resources>